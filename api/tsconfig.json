{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": "..",
    "paths": {
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
